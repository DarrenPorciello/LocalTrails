    <% layout('layouts/boilerplate') %>
    <div class="row">
        <h1 class="text-center">Edit Trail</h1>
        <div class="col-6 offset-3">
             
            <form action="/trails/<%=trail._id%>?_method=PUT" method="POST">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="trail[title]" value="<%=trail.title%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="trail[location]" value="<%= trail.location%>">
                </div>
                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="trail[description]"><%= trail.description %></textarea>
                </div>
                <div class="mb-3">
                    <label class="form-label" for="image">Image URL</label>
                    <input class="form-control" type="text" id="image" name="trail[image]" value="<%= trail.image%>">
                </div>
                <div class="mb3">
                    <button class="btn btn-info">Update Trail</button>
                </div>
            </form>
            <a href="/trails/<%= trail._id%>">Back to Trails</a>
        </div>
    </div>
 
